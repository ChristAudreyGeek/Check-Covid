<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#D1D1D1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPatientEnregistrer">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_check_circle_24"/>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:background="@drawable/btn_formulairewithe">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_extrabold"
                    android:text="CERTIFICAT COVID"
                    android:textColor="#5C5C5C"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/btn_formulairevertflou"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_check_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/avenir_extrabold"
                        android:text="Vérification réussi"
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="18dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_formulairevertflouflou"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_outline_info_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/avenir_regular"
                        android:layout_marginRight="30sp"
                        android:text="Valable uniquement avec une pièce d'identité"
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="18dp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_extrabold"
                    android:text=""
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:id="@+id/nom"
                    android:layout_marginTop="40dp"
                    android:textSize="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_regular"
                    android:text="Nom"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_extrabold"
                    android:text=""
                    android:layout_marginLeft="50dp"
                    android:id="@+id/prenom"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:textSize="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_regular"
                    android:text="Prénom"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_extrabold"
                    android:text=""
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:id="@+id/genre"
                    android:textSize="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_regular"
                    android:text="Genre"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>


                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="40sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/btn_formulairevertflouflou"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_outline_info_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/avenir_regular"
                        android:layout_marginRight="30sp"
                        android:text="Le patient disposant de l'application doit scanner se code QR pour enregistré son Certificat covid"
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:textSize="18dp"/>


                </LinearLayout>

                <ImageView
                    android:layout_marginBottom="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/qrcode"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

        </ScrollView>




    </LinearLayout>


</LinearLayout>