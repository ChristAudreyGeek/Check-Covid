<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySendActuallite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_extrabold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Publier une actuallitÃ©"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/img"
                android:background="@color/flougrise"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_extrabold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Source"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@color/flougrise"
                android:id="@+id/img_source"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"/>


            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Nom de la Source"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:elevation="3dp"
                android:layout_marginTop="10dp"
                android:hint="Name source"
                android:id="@+id/name_source"
                android:layout_marginStart="25dp"
                android:textColorHint="@color/grise"
                android:fontFamily="@font/avenir_bold"
                android:background="@drawable/btn_formulaire"
                android:theme="@style/Theme.AppCompat"
                android:textSize="16dp"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="25dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                />

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Lien web de la source"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:elevation="3dp"
                android:layout_marginTop="10dp"
                android:hint="Source"
                android:textColorHint="@color/grise"
                android:id="@+id/source"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/avenir_bold"
                android:background="@drawable/btn_formulaire"
                android:theme="@style/Theme.AppCompat"
                android:textSize="16dp"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="25dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_extrabold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="Le poste"/>

            <TextView
                android:layout_marginTop="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:id="@+id/txt_title"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Titre"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:elevation="3dp"
                android:layout_marginTop="10dp"
                android:hint="Title"
                android:id="@+id/title"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/avenir_bold"
                android:background="@drawable/btn_formulaire"
                android:theme="@style/Theme.AppCompat"
                android:textSize="16dp"
                android:textColorHint="@color/grise"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="25dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                />



            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/txt_description"
                android:layout_height="wrap_content"
                android:text="Description"/>

            <EditText
                android:fontFamily="@font/avenir_bold"
                android:textSize="16dp"
                android:id="@+id/description"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:inputType="textMultiLine"
                android:hint="Details"
                android:textColorHint="@color/grise"
                android:layout_marginTop="10dp"
                android:lines="8"
                android:paddingLeft="7dp"
                android:paddingTop="20dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp"
                android:minLines="6"
                android:background="@drawable/btn_formulaire"
                android:gravity="top|left"
                android:maxLines="25"
                android:layout_height="140dp"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:elevation="8dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/valider"
                android:background="@drawable/btn_formulairevert"
                android:fontFamily="@font/avenir_regular"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="35sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Publier"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/avenir_bold"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>