<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Personnalisez votre compte"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/avenir_extrabold"
                android:layout_marginLeft="25dp"/>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                app:corner_radius="50sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="#EDEDED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatar"/>

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/phone_number"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="25dp"
                    android:elevation="8dp"
                    android:background="@drawable/background_with_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    >

                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_round_phone_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_bold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:text="Phone number"/>

                    </LinearLayout>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/google"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="25dp"
                    android:elevation="8dp"
                    android:background="@drawable/background_with_btn"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_google"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_bold"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="Google"/>

                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:text="Centre d'information COVID19"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/avenir_extrabold"
                android:layout_marginLeft="25dp"/>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                app:corner_radius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/centrecovid"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#31000000"/>

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:text="Source infos "
                        android:fontFamily="@font/avenir_extrabold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:text="OMS"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>



            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:text="Paramètres"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/avenir_extrabold"
                android:layout_marginLeft="25dp"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/connexion"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_lock_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Connexion"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_lock_open_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Déconnexion"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_error_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="A propos"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:text="Contactez la primature "
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/avenir_extrabold"
                android:layout_marginLeft="25dp"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/scanne"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_facebook_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Facebook"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:id="@+id/call_mail"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_email_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Gmail"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_formde"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="150dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="30dp"
                        android:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/fui_transparent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_exit_to_app_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Sortir de l'application"
                        android:fontFamily="@font/avenir_bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"/>




                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>




</LinearLayout>