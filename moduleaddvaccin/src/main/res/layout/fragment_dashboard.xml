<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:fontFamily="@font/avenir_extrabold"
        android:textColor="@color/black"
        android:text="Compte rendu du conseil des ministres"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_marginLeft="15dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardElevation="2dp">

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:corner_radius="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="16dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:text="Compte rendu du conseil des ministre du mercredi 28 octobre "
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="12dp"
                    android:text="28 octobre 2021 "
                    android:textColor="#575757"/>


            </LinearLayout>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/img1"
                android:layout_width="100dp"
                app:corner_radius="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/conseil_une"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>



        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_marginLeft="15dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardElevation="2dp"
        >

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:corner_radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="16dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:text="Compte rendu du conseil des ministre du Lundi 21 Septembre "
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="12dp"
                    android:text="21 septembre 2021 "
                    android:textColor="#575757"/>


            </LinearLayout>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/img1"
                android:layout_width="100dp"
                app:corner_radius="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/troisdeux"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>



        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="2dp"
        app:cardMaxElevation="2dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        >

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:corner_radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="16dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:text="Compte rendu du conseil des ministre du mercredi 24 janvier "
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="12dp"
                    android:text="24 janvier 2021 "
                    android:textColor="#575757"/>


            </LinearLayout>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/img1"
                android:layout_width="100dp"
                app:corner_radius="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quatrequatre"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>



        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>