<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <HorizontalScrollView
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                android:elevation="3dp"
                app:cardMaxElevation="3dp"
                app:cardElevation="3dp"
                android:visibility="visible"
                android:layout_margin="8dp"
                android:layout_width="320dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/avenir_extrabold"
                            android:text="Pré-enregistrement"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Faite vous enregistré pour prendre votre vaccin"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/vaccination" />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                android:elevation="3dp"
                app:cardMaxElevation="3dp"
                app:cardElevation="3dp"
                android:visibility="visible"
                android:layout_margin="8dp"
                android:layout_width="320dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/avenir_extrabold"
                            android:text="Voir un medecin"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Consultez un medecin en cas symptomes covid"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img"
                        android:src="@drawable/rendezvous"
                        android:layout_width="140dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_height="140dp"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                android:elevation="3dp"
                app:cardMaxElevation="3dp"
                app:cardElevation="3dp"
                android:visibility="visible"
                android:layout_margin="8dp"
                android:layout_width="320dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/avenir_extrabold"
                            android:text="Symptome"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Verifier les symptome du covid19"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img1"
                        android:src="@drawable/mask"
                        android:layout_width="140dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_height="140dp"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>







        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_formulairevertflouflou"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_info_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/avenir_regular"
            android:layout_marginRight="30sp"
            android:text="Cette interface est strictement réservée aux personnels accrédités par le ministère de santé de la république du Congo"
            android:textColor="@color/black"
            android:layout_marginLeft="12dp"
            android:textSize="18dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/avenir_regular"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificats"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_extrabold"
            android:textColor="@color/black"
            android:textSize="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/relative_round"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_formulairegrise"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CERTIFICATS COVID"
                    android:visibility="gone"
                    android:fontFamily="@font/avenir_extrabold"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/destrate">

                    <LinearLayout
                        android:layout_marginBottom="-10dp"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="covid"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/avenir_regular"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certificats"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/avenir_extrabold"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_formulairegrise"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical"
                    android:id="@+id/ajouter"
                    android:layout_marginTop="60.5sp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ajouter un patient et généré un certificat COVID"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_formulairegrise"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/authentification"
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vérifier l'authenticité d'un certificat COVID"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_formulairegrise"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:elevation="8dp">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmer les prises de rendez-vous à la vaccination "
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:id="@+id/version"
                    android:fontFamily="@font/avenir_extrabold"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benedict-Heaven's"
                    android:textAllCaps="true"
                    android:fontFamily="@font/avenir_extrabold"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ED4CAF50"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/linear"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/sceau"/>


                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:text="République du Congo"
                                android:fontFamily="@font/avenir_extrabold"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenir_regular"
                                android:text="Ministère de la santé"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:text="Primaire,Secondaire et"
                                android:fontFamily="@font/avenir_regular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:visibility="gone"
                                android:textSize="12sp"
                                android:text="de l’Alphabétisation"
                                android:fontFamily="@font/avenir_regular"/>



                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textSize="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>








    </LinearLayout>

</LinearLayout>