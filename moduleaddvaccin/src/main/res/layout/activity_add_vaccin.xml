<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ActivityAddVaccin"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:id="@+id/exit"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="55dp"
            android:textColor="@color/black"
            android:text="AJOUTER UN NOUVEAU PATIENT"
            android:fontFamily="@font/avenir_extrabold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Ajouter la photo d'identité"
            android:fontFamily="@font/avenir_bold"/>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="180dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#EDEDED"
                />

            <LinearLayout
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/img"
                    android:src="@drawable/k"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"/>


            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Nom (s) du patient"
            android:fontFamily="@font/avenir_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/nom"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/btn_formulairegrise"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/avenir_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Prénom (s)"
            android:fontFamily="@font/avenir_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/prenom"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:background="@drawable/btn_formulairegrise"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/avenir_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Genre du patient"
            android:fontFamily="@font/avenir_extrabold"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textSize="16sp"
                android:checked="true"
                android:id="@+id/masculin"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20sp"
                android:textColor="@color/black"
                android:text="Masculin"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:id="@+id/feminin"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20sp"
                android:textColor="@color/black"
                android:text="Feminin"/>



        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Age du patient"
            android:fontFamily="@font/avenir_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/age"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:background="@drawable/btn_formulairegrise"
            android:layout_marginRight="25dp"
            android:inputType="number"
            android:fontFamily="@font/avenir_bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:text="Nom du vaccin"
            android:fontFamily="@font/avenir_extrabold"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_bold"
            android:textSize="16sp"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:id="@+id/aztra"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:text="Pfizer/BioNTech"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_bold"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:id="@+id/spootnik"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:text="@string/johnson_johson"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_bold"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:id="@+id/jasnsesen"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:text="Moderna"/>

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:background="@drawable/btn_formulairegrise"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Date et code QR"
                android:fontFamily="@font/avenir_extrabold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="15sp"
                android:textAlignment="center"
                android:layout_marginBottom="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="La date d'enregistrement et le code qr du patient sera générer et enregistrés automatiquement"
                android:fontFamily="@font/avenir_regular"/>




        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/valider"
            android:background="@drawable/btn_formulairevert"
            android:fontFamily="@font/avenir_regular"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="25sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Enregistrer"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenir_bold"/>
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
