<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInscription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textAlignment="center"
                android:text="Login"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/avenir_extrabold"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginRight="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20.5dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:background="@drawable/btn_formulairevertflouflou"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_outline_info_24"/>

                <TextView
                    android:layout_marginTop="12.1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:text="Vous devez disposer d'un compte pour vous enregistrer à un rendez-vous de vaccination"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Vous devez vous connécter pour commencer"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="45dp"
                android:fontFamily="@font/avenir_bold"
                android:textSize="12dp"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputlayoutname"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:textColorHint="#9EFFFFFF"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textAllCaps="false"
                    android:hint="Mom d'utilisateur"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="22dp"
                    android:textColor="@color/white"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="#888888"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="  Adress mail"
                    android:id="@+id/adressmail"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/btn_formulairevertflouflou"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="#888888"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/password"
                    android:textAllCaps="false"
                    android:hint="  Mot de passe"
                    android:paddingLeft="10dp"
                    android:background="@drawable/btn_formulairevertflouflou"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:text="Ou bien"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp" />
                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:textColor="#03A9F4"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Facebook"/>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            />


                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="#F44336"
                            android:textSize="14dp"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Google"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="28dp"
                android:visibility="gone"
                android:fontFamily="@font/avenir_extrabold"
                android:text="Se connecter"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:layout_marginLeft="25dp"
                android:text="Connectez-vous avec un compte existant"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="ou"
                android:layout_marginTop="25dp"/>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:id="@+id/phone_number"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="30dp"
                    android:elevation="4dp"
                    android:background="@drawable/background_with_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    >

                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_round_phone_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_bold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:text="Phone number"/>

                    </LinearLayout>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/google"
                    android:layout_marginEnd="30dp"
                    android:elevation="4dp"
                    android:background="@drawable/background_with_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_google"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_bold"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="Google"/>

                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_inscription"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="4dp"
            android:background="@drawable/btn_formulairevertflouflou"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:text="Inscription"/>

        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>