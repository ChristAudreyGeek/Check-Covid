<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityScanner"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/demande_scanne"
                android:visibility="visible"
                android:background="#D1D1D1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/perfect"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round"
                    android:layout_alignParentBottom="true">


                    <TextView
                        android:layout_marginTop="65dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scannez le code QR placé sur le certificat COVID-19"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="45sp"
                        android:layout_width="match_parent"
                        android:background="@drawable/btn_formulairevertflou"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_info_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/avenir_regular"
                            android:layout_marginRight="30sp"
                            android:text="Valable uniquement avec une pièce d'identité"
                            android:textColor="@color/black"
                            android:layout_marginLeft="12dp"
                            android:textSize="18dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/btn_formulairevertflouflou"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/code"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/avenir_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18dp"
                            android:text="Scanner et enregistré le code QR sur votre certificat, il affirme son authenticité."/>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:onClick="ScanButton"
                        android:background="@drawable/btn_form"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_extrabold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18dp"
                            android:layout_centerInParent="true"
                            android:text="Lancer le scanne"/>



                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/information"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="#D1D1D1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ActivityPatientEnregistrer">


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/perfect"/>




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/btn_formwhite">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenir_extrabold"
                                android:text="CERTIFICAT COVID"
                                android:textColor="#5C5C5C"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:textSize="18dp"/>

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="20sp"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:background="@drawable/btn_formulairevertflou"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="20sp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_check_24"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center_vertical"
                                    android:fontFamily="@font/avenir_extrabold"
                                    android:text="Verification réussi"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="12dp"
                                    android:textSize="18dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10sp"
                                android:layout_width="match_parent"
                                android:background="@drawable/btn_formulairevertflouflou"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="20sp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_outline_info_24"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/avenir_regular"
                                    android:layout_marginRight="30sp"
                                    android:text="Valable uniquement avec une piéce d'identité"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="12dp"
                                    android:textSize="18dp"/>


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:visibility="invisible"
                                    android:id="@+id/infos_deux"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_extrabold"
                                        android:text=""
                                        android:layout_marginLeft="50dp"
                                        android:textColor="@color/black"
                                        android:id="@+id/nom"
                                        android:layout_marginTop="40dp"
                                        android:textSize="24dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_regular"
                                        android:text="Nom"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/black"
                                        android:textSize="20dp"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_extrabold"
                                        android:text=""
                                        android:layout_marginLeft="50dp"
                                        android:id="@+id/prenom"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="40dp"
                                        android:textSize="24dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_regular"
                                        android:text="Prénom"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/black"
                                        android:textSize="20dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_extrabold"
                                        android:text=""
                                        android:layout_marginLeft="50dp"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="40dp"
                                        android:id="@+id/genre"
                                        android:textSize="24dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_regular"
                                        android:text="Genre"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/black"
                                        android:textSize="20dp"/>




                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="40dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/avenir_extrabold"
                                            android:text="Janssen"
                                            android:layout_marginLeft="50dp"
                                            android:textColor="@color/black"
                                            android:id="@+id/vaccin"
                                            android:textSize="24dp"/>



                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/avenir_regular"
                                            android:text="Vaccin"
                                            android:layout_marginLeft="50dp"
                                            android:layout_marginTop="2dp"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"/>

                                        <TextView
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="30dp"
                                            android:layout_centerVertical="true"
                                            android:layout_width="wrap_content"
                                            android:id="@+id/date"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/avenir_regular"
                                            android:text="administré le 21-octobre-2021"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="2dp"
                                            android:textColor="@color/black"
                                            android:textSize="16dp"/>

                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenir_regular"
                                        android:text="1ére dose"
                                        android:layout_marginLeft="50dp"
                                        android:id="@+id/dose"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/black"
                                        android:textSize="20dp"/>

                                    <ImageView
                                        android:layout_marginBottom="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:id="@+id/qrcode"
                                        android:adjustViewBounds="true"/>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginRight="25dp"
                                        android:id="@+id/enregistré"
                                        android:layout_marginBottom="25dp"
                                        android:background="@drawable/btn_form">

                                        <TextView
                                            android:layout_marginTop="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/avenir_extrabold"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="20sp"
                                            android:layout_marginBottom="10dp"
                                            android:textSize="20dp"
                                            android:layout_centerInParent="true"
                                            android:text="Enregistré le certificats"/>



                                    </RelativeLayout>



                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/progress_bar"
                                    android:layout_width="40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="40dp"/>
                            </RelativeLayout>



                        </LinearLayout>

                    </ScrollView>




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/scanne_actuelle"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scannne Terminer"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/avenir_extrabold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/avenir_regular"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25sp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16.5dp"
                        android:text="Ce code Qr contient les informations de votre certificat, Vérifiez  son authenticité avant de l'enregistrer"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/qrcodedeux"
                        android:adjustViewBounds="true"/>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/btn_formulairevertflouflou"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/code"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/avenir_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18dp"
                            android:text="Après vaccination récupéré votre pré-certification en scannant le code QR"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:id="@+id/verifier"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="25dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:background="@color/grise_flou_flou"
                            android:layout_marginRight="10dp"
                            app:corner_radius="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/scannewindows"/>

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/avenir_bold"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10sp"
                                android:textSize="16dp"
                                android:text="Verifier"/>



                        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

                        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/enregistre"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:background="@color/grise_flou_flou"
                            android:layout_marginRight="25dp"
                            app:corner_radius="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/downloaddeux"/>

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/avenir_bold"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10sp"
                                android:textSize="16dp"
                                android:text="Enregistrer"/>



                        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="35sp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/btn_formulairevertflou"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginTop="12.8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_info_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:layout_marginRight="30sp"
                            android:text="Valable uniquement avec une pièce d'identité"
                            android:textColor="@color/black"
                            android:layout_marginLeft="12dp"
                            android:textSize="18dp"/>


                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>

