<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCustomCompte"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_extrabold"
        android:text="Personnalisez"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:id="@+id/ecriture"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/avenir_regular"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textSize="16dp"
        android:text="Personnalisez votre compte"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:src="@drawable/avatar"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_avatar"
        />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_txt"
            android:layout_marginLeft="25dp"
            android:textAlignment="viewEnd"
            android:id="@+id/txt"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/avenir_extrabold"
            android:textSize="22.1dp"
            android:textAllCaps="false"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Vous devez vous connécter pour commencer"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="45dp"
                android:fontFamily="@font/avenir_bold"
                android:textSize="12dp"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputlayoutname"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:theme="@style/mytheme"
                android:textColorHint="#9EFFFFFF"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textAllCaps="false"
                    android:hint="Mom d'utilisateur"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="22dp"
                    android:textColor="@color/white"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputelayoutemail"
                android:theme="@style/mythemeblack"
                android:textColorHint="#888888"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nom(s) et Prenom(s)"
                    android:id="@+id/edit_nom"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/btn_formulairevertflouflouu"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:inputType="text" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputlayoutpasseword"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:theme="@style/mythemeblack"
                android:textColorHint="#888888"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/age"
                    android:textAllCaps="false"
                    android:hint="Age"
                    android:paddingLeft="15dp"
                    android:background="@drawable/btn_formulairevertflouflouu"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:inputType="number" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/avenir_extrabold"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/myspinner"
                    android:theme="@style/mytheme"
                    android:background="@drawable/btn_formulairevertflouflouu"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_arrow_drop_down_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:background="@drawable/btn_formulairevertflouflou"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_outline_info_24"/>

                <TextView
                    android:layout_marginTop="12.1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:text="Ces informations doivent strictement correspondre à votre piéce d'identité "/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:fontFamily="@font/avenir_extrabold"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="@color/black"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_marginLeft="28.1dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Masculin"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14sp"
                    android:button="@drawable/custom_checkbox"
                    android:checked="true"
                    android:id="@+id/male"
                    android:theme="@style/mythemeblack"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Feminin"
                    android:theme="@style/mythemeblack"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/feminin"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/avenir_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:text="Ou bien"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/facebook_icon"/>
                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:textColor="#03A9F4"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Facebook"/>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/google_plus"/>


                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textColor="#F44336"
                            android:textSize="14dp"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Google"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_inscription"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/btn_formulairevertflouflou"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:layout_centerInParent="true"
                android:text="Valider"/>

        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>